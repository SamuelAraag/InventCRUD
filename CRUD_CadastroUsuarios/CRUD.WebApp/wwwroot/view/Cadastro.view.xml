<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.Cadastro"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	displayBlock="true">

<Page title="{i18n>telaDeCadastro}">
<headerContent>
	<Button 
		type="Emphasized"
		text="Salvar"
		press="aoClicarEmSalvar"
		ariaDescribedBy="acceptButtonDescription genericButtonDescription">
	</Button>
	<Button 
		type="Ghost"
		text="Cancelar / Voltar"
		press="aoClicarEmCancelar"
		ariaDescribedBy="acceptButtonDescription genericButtonDescription">
	</Button>
</headerContent>
	<l:VerticalLayout class="sapUiContentPadding" width="50%">

		<Label text="Nome Completo" labelFor="input-nome" required="true"/>
		<Input value="{usuario>/nome}" required="true" placeholder="Digite seu nome" />

        <Label text="Senha" labelFor="senhaInput" required="true"/>
		<Input value="{usuario>/senha}" type="Password"  placeholder="Digite sua senha" />

		<Label text="E-mail" labelFor="emailInput" required="true"/>
		<Input
			value="{usuario>/email}"
			class="sapUiSmallMarginBottom"
			type="Email"
			placeholder="Digite seu E-mail"
			required="true"/>
        
        <Label text="Data de Nascimento" labelFor="input-dataNascimento"/>

		<DatePicker
			value="{usuario>/dataNascimento}"
			valueFormat="yyyy-MM-dd" displayFormat="short"
			change="handleChange"
			class="sapUiSmallMarginBottom"/>
	</l:VerticalLayout>
</Page>

</mvc:View>