<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	displayBlock="true">

<Page title="{i18n>homePageTitle}">
	<Panel accessibleRole="Region">
		<headerToolbar>
			<Toolbar>
				<Title 
				text="{i18n>invoiceListTitle}"/>
				<ToolbarSpacer/>
				<SearchField
					width="20%"
					search=".onFilterInvoices"/>
			</Toolbar>
		</headerToolbar>

		<Button
		id="carregarUsuarios"
      	text="Recarregar usuarios"
      	press=".carregarUsuariosDoBanco"/>
    	<Button
    	id="botaoCriar"
    	text="{i18n>buttonCreate}"
    	press=".aoClicarEmCriar"/>
		<Table
			id="invoiceList"
			class="sapUiResponsiveMargin"
			width="auto"
			items="{
				path : 'listaDeUsuarios>/',
				sorter : {
					path : 'id',
					group : true
				}
			}">
			<columns>
				<Column
					hAlign="End"
					minScreenWidth="Small"
					demandPopin="true"
					width="5em">
					<Text text="{i18n>id}"/>
				</Column>
				<Column>
					<Text text="{i18n>nome}"/>
				</Column>
				<Column
					minScreenWidth="Small"
					demandPopin="true">
					<Text text="{i18n>email}"/>
				</Column>
				<Column
					minScreenWidth="Tablet"
					demandPopin="false">
					<Text text="{i18n>dataNascimento}"/>
				</Column>
				<Column
					minScreenWidth="Tablet"
					demandPopin="false">
					<Text text="{i18n>dataCriacao}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem
					type="Navigation"
					press=".onPress">
					<cells>
						<ObjectNumber number="{listaDeUsuarios>id}" emphasized="false"/>
						<ObjectIdentifier title="{listaDeUsuarios>nome}"/>
						<Text text="{listaDeUsuarios>email}"/>
						<Text text="{listaDeUsuarios>dataNascimento}"/>
						<Text text="{listaDeUsuarios>dataCriacao}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		
	</Panel>

	</Page>
</mvc:View>